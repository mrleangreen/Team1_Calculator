Addition
def add(user_numbers):
  return(f"The answer is {sum(user_numbers)}")

user_numbers = []

user_numbers.append(int(input("Enter the first number that you want added: ")))
user_numbers.append(int(input("Now the second number: ")))

user_choice = input("Add more numbers?: ")

while user_choice != "no":
  user_numbers.append(int(input("Enter the number: ")))
  user_choice = input("Add more?: ")

print(add(user_numbers)) 

Subtraction
def sub(user_numbers):
    return f"The answer is {diff(user_numbers)}"

def diff(numbers):
    result = numbers[0]
    for number in numbers[1:]:
        result -= number
    return result

user_numbers = []

user_numbers.append(int(input("Enter the first number that you want to subtract: ")))
user_numbers.append(int(input("Now the second number: ")))

user_choice = input("Subtract more numbers?: ")

while user_choice != "no":
    user_numbers.append(int(input("Enter the number: ")))
    user_choice = input("Subtract more?: ")

print(sub(user_numbers)) 

